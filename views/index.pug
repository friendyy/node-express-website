extends default

block content
  div.container
    each person in people
      div.person
        div.person-image(style=`background: url('/images/${person.id}.jpg') top center
        no-repeat; background-size: cover;`)
        h2.person-name
          | #{person.firstname} #{person.lastname}
        a(href=`/profile?id=${person.id}`)
          | Views Profiles
    div.adddiv
    a(href=`/addProfileForm` class='linkbutton') 
          | Add New

